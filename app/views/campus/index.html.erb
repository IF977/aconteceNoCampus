<p id="notice"><%= notice %></p>

<h1>Lista de Campus</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereco</th>
      <th>Numero</th>
      <th>Bairro</th>
      <th>Cidade</th>
      <th>Uf</th>
      <th>Telefone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campus.each do |campu| %>
      <tr>
        <td><%= campu.nome %></td>
        <td><%= campu.endereco %></td>
        <td><%= campu.numero %></td>
        <td><%= campu.bairro %></td>
        <td><%= campu.cidade %></td>
        <td><%= campu.uf %></td>
        <td><%= campu.telefone %></td>
        <td><%= campu.email %></td>
        <td class="btn btn-default btn-sm"><%= link_to 'Exibir', campu %></td>
        <td class="btn btn-default btn-sm"><%= link_to 'Editar', edit_campu_path(campu) %></td>
        <td class="btn btn-default btn-sm"><%= link_to 'Apagar', campu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Campus', new_campu_path,  class: 'btn btn-primary'  %>
