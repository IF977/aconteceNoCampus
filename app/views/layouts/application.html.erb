  <![endif]-->
</head>
<body> <ul>
  <% %w[campus usuarios eventos].each do |controller_name| %> <li>
  <%= link_to controller_name, controller: controller_name %> </li>
  <% end %>
  </ul>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
	<a class="navbar-brand" href="#">Acontece no Campus</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
	<ul class="nav navbar-nav">
	  <li class="active"><a href="/campus">Campus</a></li>
	  <li><a href="/usuarios">Usuarios</a></li>
	  <li><a href="/eventos">Eventos</a></li>
	</ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

  <div class="container">    
    <%= yield %>
  </div>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
